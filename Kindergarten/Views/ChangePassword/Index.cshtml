



<!--from  model-->
@model Signup

<div class="d-flex justify-content-center">
    <form method="post" asp-action="Index">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Change Password</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="Username"></label>
                <input type="text" class="form-control" asp-for="Username" value="{{ TempData['Username'] }}" readonly />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password"></label>
                <input type="password" id="Password" name="Password" asp-for="Password" placeholder="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input type="password" id="ConfirmPassword" name="ConfirmPassword" asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group button-container">
                <button type="submit" class="btn btn-primary">Save Change</button>
            </div>
        </div>
    </form>
</div>








@section Scripts {
    <partial name="_ValidationScriptsPartial" />
