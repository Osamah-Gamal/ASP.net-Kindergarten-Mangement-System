
@model List<Kid.Models.DBS.Student>

<h1 class="text-center">Students</h1><br><br><br><br><hr>
<div class='container'>@using(Html.BeginForm("index","Student",FormMethod.Get))
    {
       
<table class="table table-responsive table-stripped table-hover" style="text-align:center;">
    <thead class="bg-primary" > 
        <tr calss="table-active">
            <th>ID</th>
            <th>Name</th>
            <th>Arabic language</th>
            <th>English language</th>
            <th>Holy Quran</th>
            <th>Calculation subject</th>
            <th>Drawing subject</th>
            <th>Guardian Id</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.student_id</td>
                <td>@student.Name</td>
                <td>@student.Arabic_language</td>
                <td>@student.English_language</td>
                <td>@student.Holy_Quran</td>
                <td>@student.Calculation_subject</td>
                <td>@student.Drawing_subject</td>
                <td>@student.Guardian_id</td>
                <td>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
    }
    <br />
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
</div>
    

















